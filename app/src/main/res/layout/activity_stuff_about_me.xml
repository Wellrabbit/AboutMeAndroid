<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".StuffAboutMeActivity"
    android:id="@+id/AboutMeLayout"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Emily Orton"
        android:id="@+id/AboutEmilyText"
        android:textSize="20dp"
        android:singleLine="true"
        android:visibility="visible"
        android:typeface="serif"
        android:enabled="true"
        android:focusable="true"
        android:editable="false"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Facts"
        android:id="@+id/RandomFactsButton"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/AboutEmilyText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Goals"
        android:id="@+id/MyGoalsButton"
        android:layout_below="@+id/RandomFactsButton"
        android:layout_alignRight="@+id/ExitButton"
        android:layout_alignEnd="@+id/ExitButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scotland"
        android:id="@+id/ScotlandButton"
        android:layout_below="@+id/MyGoalsButton"
        android:layout_alignRight="@+id/RandomFactsButton"
        android:layout_alignEnd="@+id/RandomFactsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dream Job"
        android:id="@+id/DreamJobButton"
        android:layout_alignBottom="@+id/ScotlandButton"
        android:layout_toRightOf="@+id/MyGoalsButton"
        android:layout_toEndOf="@+id/MyGoalsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acomplishments"
        android:id="@+id/AcomplishmentsButton"
        android:layout_alignTop="@+id/RandomFactsButton"
        android:layout_alignRight="@+id/DreamJobButton"
        android:layout_alignEnd="@+id/DreamJobButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/ExitButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ScotlandButton"
        android:layout_toEndOf="@+id/ScotlandButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/ButtonDependentText"
        android:enabled="true"
        android:layout_below="@+id/DreamJobButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randomFactsImage"
        android:background="@drawable/randomfacts1"
        android:visibility="gone"
        android:layout_toRightOf="@+id/ExitButton"
        android:layout_toEndOf="@+id/ExitButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acomplishmentsImage"
        android:background="@drawable/acomplishments1"
        android:layout_below="@+id/ScotlandButton"
        android:layout_alignRight="@+id/myGoalsImage"
        android:layout_alignEnd="@+id/myGoalsImage"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myGoalsImage"
        android:background="@drawable/goal1"
        android:layout_alignBottom="@+id/randomFactsImage"
        android:layout_alignLeft="@+id/ScotlandButton"
        android:layout_alignStart="@+id/ScotlandButton"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScotlandImage"
        android:layout_alignBottom="@+id/acomplishmentsImage"
        android:layout_alignRight="@+id/ExitButton"
        android:layout_alignEnd="@+id/ExitButton"
        android:background="@drawable/scotland1"
        android:layout_alignLeft="@+id/AcomplishmentsButton"
        android:layout_alignStart="@+id/AcomplishmentsButton"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dreamJobImage"
        android:background="@drawable/dreamjob1"
        android:layout_alignTop="@+id/ScotlandImage"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
